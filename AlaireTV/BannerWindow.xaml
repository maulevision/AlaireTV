<Window x:Class="AlaireTV.BannerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Banner" Height="200" Width="600"
        WindowStyle="None" ResizeMode="NoResize"
        Topmost="True" Background="Transparent"
        AllowsTransparency="True">
	<Grid>
		<!-- Contenedor del Banner -->
		<Border Background="#FF2D2D30" CornerRadius="10"
                BorderBrush="#FF3F3F46" BorderThickness="2">
			<Grid>
				<!-- Texto del Banner -->
				<TextBlock Name="BannerText"
                           Text="Banner de AlaireTV"
                           Foreground="White"
                           FontSize="24"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
			</Grid>
		</Border>
	</Grid>
</Window>