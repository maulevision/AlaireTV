<Window x:Class="AlaireTV.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Input Dialog" Height="200" Width="400">
    <Grid>
        <TextBlock x:Name="PromptText" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10" />
        <TextBox x:Name="InputTextBox" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="10" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10">
            <Button Content="OK" Click="OkButton_Click" Margin="5" />
            <Button Content="Cancel" Click="CancelButton_Click" Margin="5" />
        </StackPanel>
    </Grid>
</Window>
