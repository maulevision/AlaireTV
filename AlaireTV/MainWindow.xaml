<Window x:Class="AlaireTV.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AlaireTV" Height="600" Width="1000">
    <Grid>
        <!-- Botones Principales -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0">
            <Button Content="Agregar Contenido" Width="150" Height="30" Margin="0,0,10,0" Click="AddContentButton_Click"/>
            <Button Content="Iniciar Reproducción" Width="150" Height="30" Margin="0,0,10,0" Click="StartButton_Click"/>
            <Button Content="Programar Playlist" Width="150" Height="30" Margin="0,0,10,0" Click="SchedulePlaylistButton_Click"/>
        </StackPanel>

        <!-- Lista de Contenido -->
        <GroupBox Header="Lista de Contenido" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,60,0,0" Width="600" Height="250">
            <ListBox Name="ContentListBox"/>
        </GroupBox>

        <!-- Programación -->
        <GroupBox Header="Programación" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,330,0,0" Width="600" Height="200">
            <DataGrid Name="ScheduleDataGrid" AutoGenerateColumns="True"/>
        </GroupBox>

        <!-- Información de Reproducción -->
        <GroupBox Header="Estado de Reproducción" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0" Width="350" Height="520">
            <StackPanel>
                <TextBlock Name="NowPlayingText" Text="Reproduciendo: Ninguno" Margin="10"/>
                <TextBlock Name="NextUpText" Text="Siguiente: Ninguno" Margin="10"/>
                <Button Content="Iniciar Grabación" Width="150" Height="30" Margin="10" Click="StartRecordingButton_Click"/>
                <Button Content="Detener Grabación" Width="150" Height="30" Margin="10" Click="StopRecordingButton_Click"/>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
