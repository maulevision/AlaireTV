<Window x:Class="AlaireTV.ScheduleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Programacion" Height="300" Width="400">
    <Grid>
        <TextBox Name="TitleTextBox" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="10"/>
        <DatePicker Name="StartDatePicker" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="10,40,10,10"/>
        <ListBox Name="ProgramListBox" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Margin="10,150,10,10"/>
    </Grid>
</Window>
